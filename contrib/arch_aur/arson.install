## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
  if [ `vercmp $2 0.8.11-2` -eq -1 ]; then
    echo ">> Arson now uses the packaged versions of the JSON and facets gems"
    echo ">> Please remove any old versions of those gems (gem uninstall -a facets json)"
  fi
}

