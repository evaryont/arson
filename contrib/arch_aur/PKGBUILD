# Contributor: Colin Shea <friar.foaly@gmail.com>
pkgname=arson
pkgver=0.8.7
pkgrel=1
pkgdesc="The HOT AUR search helper!"
arch=(i686 x86_64)
url="http://bbs.archlinux.org/viewtopic.php?pid=348138"
license=('GPL')
source=("http://evaryont.ath.cx/projects/${pkgname}-${pkgver}.tar.bz2")
md5sums=('5af6a45c9d40a503f13547b0713cd86d')
depends=('ruby' 'rubygems')
install='arson.install'

build() {
  install -d $startdir/pkg/usr/share/doc/$pkgname $startdir/pkg/usr/bin $startdir/pkg/usr/share/fish/completion/
  install -t $startdir/pkg/usr/share/doc/$pkgname $srcdir/arson/ChangeLog -m 644
  install -t $startdir/pkg/usr/bin $srcdir/arson/arson -m 755
  install -t $startdir/pkg/usr/share/fish/completion $srcdir/arson/arson.fish -m 755
}

