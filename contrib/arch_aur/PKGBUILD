# Contributor: Colin Shea <friar.foaly@gmail.com>
pkgname=arson
pkgver=0.8.8
pkgrel=1
pkgdesc="The HOT AUR search helper!"
arch=(i686 x86_64)
url="http://bbs.archlinux.org/viewtopic.php?pid=348138"
license=('GPL')
source=("http://github.com/evaryont/$pkgname/tarball/v$pkgver")
md5sums=('2620667aa20a1ee043f6fa42677c94c7')
depends=('ruby' 'rubygems')
install='arson.install'

build() {
  cd $srcdir/evaryont-arson-*
  install -d $pkgdir/usr/share/doc/$pkgname $pkgdir/usr/bin $pkgdir/usr/share/fish/completion/
  install -t $pkgdir/usr/share/doc/$pkgname ChangeLog -m 644
  install -t $pkgdir/usr/bin bin/arson -m 755
  install -t $pkgdir/usr/share/fish/completion contrib/completion/arson.fish -m 755
}

